issn = {0004-637X},
journal = {Astrophys. Journal, Vol. 847, Issue 1, Artic. id. 29, 14 pp. (2017).},
keywords = {planets and satellites: atmospheres,planets and satellites: composition,planets and satellites: formation,planets and satellites: physical evolution},
title = {{The Evaporation Valley in the Kepler Planets}},
