issn = {0004-6361},
journal = {A{\&}A},
keywords = {planetary systems,planets and satellites: formation,planets and satellites: interiors},
month = {oct},
pages = {A113},
title = {{Luminosity of young Jupiters revisited}},
url = {http://adsabs.harvard.edu/abs/2013A{\%}26A...558A.113M},
volume = {558},
year = {2013}
}
