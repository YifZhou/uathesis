keywords = {atmospheres — stars,brown dwarfs,planets and satellites},
title = {{SEDIMENTATION EFFICIENCY OF CONDENSATION CLOUDS IN SUBSTELLAR ATMOSPHERES}},
url = {https://arxiv.org/pdf/1802.06241.pdf},
year = {2018}
}
