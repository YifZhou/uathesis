pages = {265--295},
title = {{Observational Constraints on the Formation and Evolution of Binary Stars}},
url = {http://adsabs.harvard.edu/abs/2001ApJ...556..265W http://stacks.iop.org/0004-637X/556/i=1/a=265},
volume = {556},
year = {2001}
}
@article{Casewell2012,
