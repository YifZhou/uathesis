author = {Thorngren, Daniel P and Fortney, Jonathan J},
doi = {10.3847/1538-3881/aaba13},
eprint = {1709.04539},
file = {:Users/ZhouYf/Documents/papers/Thorngren, Fortney - 2017 - Bayesian Analysis of Hot Jupiter Radius Anomalies Evidence for Ohmic Dissipation.pdf:pdf},
