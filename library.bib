file = {:Users/ZhouYf/Documents/papers/Zhang, Showman - 2018 - Global-Mean Vertical Tracer Mixing in Planetary Atmospheres.pdf:pdf},
month = {mar},
title = {{Global-Mean Vertical Tracer Mixing in Planetary Atmospheres}},
