doi = {10.1093/mnras/stx804},
file = {:Users/ZhouYf/Documents/papers/Macdonald, Madhusudhan - 1979 - HD 209458b in new light evidence of nitrogen chemistry, patchy clouds and sub-solar water.pdf:pdf},
journal = {MNRAS},
keywords = {atmo-spheres-planets and satellites,data analysis-techniques,individual (HD 209458b),methods,spectroscopic-planets and satellites},
title = {{HD 209458b in new light: evidence of nitrogen chemistry, patchy clouds and sub-solar water}},
