arxivId = {1609.05053},
author = {He, Matthias Y. and Triaud, Amaury H. M. J. and Gillon, Micha{\"{e}}l},
eprint = {1609.05053},
file = {:Users/ZhouYf/Documents/papers/He, Triaud, Gillon - 2016 - First limits on the occurrence rate of short-period planets orbiting brown dwarfs.pdf:pdf},
