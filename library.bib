doi = {10.3847/1538-3881/aa6474},
file = {:Users/ZhouYf/Documents/papers/Wang et al. - 2017 - Observing Exoplanets with High Dispersion Coronagraphy. I. The Scientific Potential of Current and Next-generation.pdf:pdf},
journal = {AJ},
keywords = {brown dwarfs,instrumentation: spectrographs,planetary systems,techniques: high angular resolution,techniques: spectroscopic},
pages = {183},
title = {{Observing Exoplanets with High Dispersion Coronagraphy. I. The Scientific Potential of Current and Next-generation Large Ground and Space Telescopes}},
